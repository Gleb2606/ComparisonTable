<Window x:Class="WPFAPP.AddSectionOrSubsectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить Раздел/Подраздел" Height="200" Width="350">
    <Grid>
        <StackPanel>
            <Label>Номер раздела/подраздела</Label>
            <TextBox x:Name="IdTextBox" Margin="10"
                     PreviewTextInput="NumericTextBox_PreviewTextInput"
                     PreviewKeyDown="NumericTextBox_PreviewKeyDown"/>
            <Label>Наименование</Label>
            <TextBox x:Name="NameTextBox" Margin="10"/>
            <Button Content="Добавить" Click="AddButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>


